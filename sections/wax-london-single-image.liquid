<style>
   [id = "single-image-section-wrapper-{{ section.id }} "] {
      padding: {{ section.settings.single-image-section-padding-top }}px {{ section.settings.single-image-section-padding-left }}px {{ section.settings.single-image-section-padding-bottom }}px {{ section.settings.single-image-section-padding-left }}px;
      margin: 0px {{ section.settings.margin }}px;
      width: {{ section.settings.section-width }}%;
    
    }

    [id = "single-image-section-wrapper-{{ section.id }} "] img {
      width: 100%;
    }
    [id = "single-image-section-wrapper-{{ section.id }} "] span {
      font-family: {{ section.settings.caption-font-family }};
      color: {{ section.settings.caption-color }};
      font-size: {{ section.settings.caption-size }}px;
      
    }
    [id = "single-image-section-wrapper-{{ section.id }} "] span p {
      margin: 0px;
      
    }
  
    [id = "single-image-section-wrapper-{{ section.id }} "] span p a {
      color: {{ section.settings.caption-color }};
    }
  </style>
  
  
  
  <div id="single-image-section-wrapper-{{ section.id }} "> 
  
    <img src="{{ section.settings.image-picker | img_url: 'grande' }}" alt="" width="" height="" loading="lazy"> 
    <span class=" {{ section.settings.text-align }} "> {{ section.settings.image-caption }} </span>
     
  
  
  </div>
  
  
  
  {% schema %} 
    {
     "name":"wax-london-single-image",
     "settings":[
        {
           "type":"range",
           "id":"single-image-section-padding-top",
           "label":"padding top",
           "min":0,
           "max":200,
           "step":10,
           "unit":"px",
           "default":0
        },
        {
           "type":"range",
           "id":"single-image-section-padding-left",
           "label":"padding right",
           "min":0,
           "max":200,
           "step":10,
           "unit":"px",
           "default":0
        },
        {
           "type":"range",
           "id":"single-image-section-padding-bottom",
           "label":"padding bottom",
           "min":0,
           "max":200,
           "step":10,
           "unit":"px",
           "default":0
        },
        {
           "type":"range",
           "id":"single-image-section-padding-right",
           "label":"padding left",
           "min":0,
           "max":200,
           "step":10,
           "unit":"px",
           "default":0
        },
        {
          "type": "image_picker",
          "id": "image-picker",
          "label": "Image"
      },
      {
          "type":"richtext",
          "id":"image-caption",
          "label":"Image Caption"
      }, 
      {
         "type": "font",
         "id": "caption-font-family",
         "label" : "caption Font Family"
      },
      {
         "type": "color",
         "id": "caption-color",
         "label": "caption Text Color",
         "default": "#000000"
      },
      {
         "type":"range",
         "id":"caption-size",
         "label":"caption text size",
         "min":8,
         "max":40,
         "step":1,
         "unit":"px",
         "default":10
      },
      {
         "type":"select",
         "id":"text-align",
         "label":"Align Caption",
         "options":[
            {
               "value":"left",
               "label":"Left"
            },
            {
               "value":"center",
               "label":"Center"
            },
            {
               "value":"right",
               "label":"Right"
            }
         ]
      },
      {
        "type": "range",
        "id": "section-width",
        "label": "width",  
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 100
      },
      // {
      //   "type": "range",
      //   "id": "section-height",
      //   "label": "height",  
      //   "min": 10,
      //   "max": 900,
      //   "step": 10,
      //   "unit": "px",
      //   "default": 500 
      // },
      {
        "type": "range",
        "id": "margin",
        "label": "margin",  
        "min": 0,
        "max": 800,
        "step": 10,
        "unit": "px",
        "default": 0
      }
      
     ],
     "presets":[
        {
           "category":"content",
           "name":"wax-london-single-image"
        }
     ]
  }
  {% endschema %}