<section class="double-image-style1-{{ section.id }}">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "double-image-block" %}
                <div class="double-image-block-{{ block.id }} block-width-{{ block.settings.block-width }}">

                    <div class="image-part">
                        <div class="left-image">
                            <img src="{{ block.settings.image-left | img_url: 'grande' }}" alt="" width="" height="" loading="lazy">
                        </div>

                        <div class="right-image">
                            <img src="{{ block.settings.image-right | img_url: 'grande' }}" alt="" width="" height="" loading="lazy">
                        </div>
                                   
                    </div>

                    <div class="text-part">
                        <div class="left-caption">
                            <span> {{ block.settings.left-image-caption }} </span> 
                        </div>       

                        <div class="right-caption">
                            <span> {{ block.settings.right-image-caption }} </span>  
                        </div>                   
                    </div>





                   

                </div>
            


            {% when 'spacer-block' %}

                <section class="spacer-{{ block.id }}">
                        
                </section>

        {% endcase %}
    {% endfor %}
</section>



<style>
   
    {% for block in section.blocks %}

        {% case block.type %}
            {% when "double-image-block" %}
                .double-image-block-{{ block.id }} span {
                    display: none;
                }
                       
                .double-image-block-{{ block.id }} .text-part span p {
                    margin: 0 auto;
                }
            .double-image-block-{{ block.id }}.block-width-small {
                max-width: 600px;
                margin: 0 auto;
             }
             .double-image-block-{{ block.id }}.block-width-medium {
                max-width: 900px;
                margin: 0 auto;
             }
             .double-image-block-{{ block.id }}.block-width-full {
                max-width: 100%;
             }
       
             .double-image-block-{{ block.id }}.block-width-custom {
                max-width: {{ block.settings.custom-block-width | append: "px" }};
                margin: 0 auto;
             }
       

             .double-image-block-{{ block.id }} .image-part {
                display: flex;
                justify-content: center;
              
             }
             
             .double-image-block-{{ block.id }} .text-part {
                display: flex;
                justify-content: center;
              
             }

             .double-image-block-{{ block.id }} .image-part .left-image,  .double-image-block-{{ block.id }} .image-part .right-image  {
                width: 50%;
             }

             .double-image-block-{{ block.id }} .text-part .left-caption,  .double-image-block-{{ block.id }} .text-part .right-caption  {
                width: 50%;
             }

             .double-image-block-{{ block.id }} img {
                height: 100%;
                width: 100%;
             }
             

             {% if block.settings.space-between-images %}
                
             .double-image-block-{{ block.id }} .image-part  {
                display: flex;
                justify-content: space-between;
             }
             .double-image-block-{{ block.id }} .text-part {
                display: flex;
                justify-content: space-between;
             }


             .double-image-block-{{ block.id }} .image-part .left-image,  .double-image-block-{{ block.id }} .image-part .right-image  {
                width: 49%;
             }

             .double-image-block-{{ block.id }} .text-part .left-caption,  .double-image-block-{{ block.id }} .text-part .right-caption  {
                width: 49%;
             }

             {% endif %}


             {% if block.settings.left-image-small %}

                .double-image-block-{{ block.id }}  .image-part .left-image {
{%- comment -%}                     
                    display: flex;
                    justify-content: center;
                    align-items: center; 
                    background-color: #f2f2f2; {%- endcomment -%}
                }
                .double-image-block-{{ block.id }}  .image-part .left-image img {
                    padding: 45px;
                    background-color: #f2f2f2;
                }
               
                
             {% endif %}

             {% if block.settings.right-image-small %}

                .double-image-block-{{ block.id }}  .image-part .right-image {
                    {%- comment -%} display: flex;
                    justify-content: center;
                    align-items: center; 
                    background-color: #f2f2f2; {%- endcomment -%}
                }
                .double-image-block-{{ block.id }}  .image-part .right-image img {
                   padding: 45px;
                   background-color: #f2f2f2;
                    
                }
                
             {% endif %}

             {% if block.settings.show-caption %}
                .double-image-block-{{ block.id }} span {
                    display: inline;
                }
             {% endif %}

            {% when "spacer-block" %}
                .double-image-style1-{{ section.id }}  .spacer-{{ block.id }} {
                    height: {{ block.settings.spacer-height }}px;
                }
            
        {% endcase %}
        
    {% endfor %}


</style>



