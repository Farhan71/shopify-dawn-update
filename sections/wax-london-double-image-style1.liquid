                "unit": "px",
                "default": 800
            },
            {
        "type": "checkbox",
        "id": "show-caption",
        "label": "show caption",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "left-image-small",
        "label": "left image small",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "right-image-small",
        "label": "right image small",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "space-between-images",
        "label": "space between images",
        "default": false
      }
            ]
        },
        {
            "type": "spacer-block",
            "name": "Spacer",
              "settings":[
                {
                    "type": "range",
                    "id": "spacer-height",
                    "label": "Spacer Height",
                    "min": 0,
                    "max": 200,
                    "step": 5,
                    "unit": "px",
                    "default": 30
                }
              ]
        }
    ],
    "presets": [
        {
         "category":"content",
           "name":"wl-double-image-style1"
        }
    ]
}
