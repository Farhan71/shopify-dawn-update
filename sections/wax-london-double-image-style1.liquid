    "name": "wl-double-image-style1",
    "settings": [
      
    ],
    "blocks": [
        {
            "name": "double-image-block",
            "type": "double-image-block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image-left",
                    "label": "Image Left"
