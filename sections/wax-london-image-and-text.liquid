<style>
    
    [id = "image-and-text-section-wrapper-{{ section.id }}"] {
        
        
        margin: 0px {{ section.settings.margin }}px; 
      
    }

    [id = "image-and-text-section-wrapper-{{ section.id }}"]  .image-and-text-section-inner {
        display: inline-flex;
       flex-direction: row;;
        gap: {{ section.settings.left-right-gap }}px;
    }

    {% if section.settings.flip-content %}
        [id = "image-and-text-section-wrapper-{{ section.id }}"]  .image-and-text-section-inner {
            display: inline-flex;
           flex-direction: row-reverse;
            gap: {{ section.settings.left-right-gap }}px;
        }
    {% endif %}

    [id = "image-and-text-section-wrapper-{{ section.id }}"] .image-and-text-section-inner div img {
        width: 100%;
        height: auto;
    } 

    [id = "image-and-text-section-wrapper-{{ section.id }}"] .image-and-text-section-inner .image-section {
        width: {{ section.settings.image-section-width }}px;
    }

    [id = "image-and-text-section-wrapper-{{ section.id }}"] .image-and-text-section-inner .text-section {
        width: {{ section.settings.text-section-width }}px;
        background-color: {{ section.settings.text-section-background-color }};
        padding: {{ section.settings.text-section-padding-top-bottom }}px {{ section.settings.text-section-padding-left-right }}px;
        font-family: {{ section.settings.text-font-family }};
        color: {{ section.settings.text-color }};
        font-size: {{ section.settings.text-size }}px;
    }


    [id = "image-and-text-section-wrapper-{{ section.id }}"] .image-and-text-section-inner div span p {
        margin: 0px;
    }

</style>

<section id="image-and-text-section-wrapper-{{ section.id }}">

    <div class="image-and-text-section-inner">

        <div class="image-section">
            <img src=" {{ section.settings.section-image | img_url: 'grande' }} " alt="" width="" height="" loading="lazy"> 
            <span class=" {{ section.settings.image-caption-align }} "> {{ section.settings.image-caption }} </span>
        </div>
    
       <div class="text-section {{ section.settings.text-align }}">
            {{ section.settings.section-text }}
       </div>

    </div>
    
    
</section>

