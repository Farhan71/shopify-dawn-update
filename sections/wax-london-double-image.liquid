<style>
    .double-image-section-wrapper {
        
        
        margin: 0px {{ section.settings.margin }}px; 
      
    }

    .double-image-section-wrapper .double-image-section-inner {
        display: inline-flex;
        gap: {{ section.settings.image-gap }}px;
    }

    .double-image-section-wrapper div img {
        width: 100%;
        height: auto;
    } 

    .double-image-section-inner .image-left {
        width: {{ section.settings.left-image-width }}px;
    }

    .double-image-section-inner .image-right {
        width: {{ section.settings.right-image-width }}px;
    }
    .double-image-section-inner .image-left img {
        border: {{ section.settings.left-image-border }}px solid red;
    }
    .double-image-section-inner .image-right img {
        border: {{ section.settings.right-image-border }}px solid red;
    }
    .double-image-section-inner div span p {
        margin: 0px;
    }
</style>

<section class="double-image-section-wrapper">

    <div class="double-image-section-inner">

        <div class="image-left">
            <img src=" {{ section.settings.image-left | img_url: 'grande' }} " alt="" width="" height="" loading="lazy"> 
            <span class=" {{ section.settings.left-image-caption-align }} "> {{ section.settings.left-image-caption }} </span>
        </div>
    
       <div class="image-right">
            <img src=" {{ section.settings.image-right | img_url: 'grande' }} " alt="" width="" height="" loading="lazy"> 
            <span class=" {{ section.settings.right-image-caption-align }} "> {{ section.settings.right-image-caption }} </span>
       </div>

    </div>
    
    
</section>

