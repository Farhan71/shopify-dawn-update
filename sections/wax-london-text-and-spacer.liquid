<style>
    .text-and-spacer-section-wrapper {
      padding: {{ section.settings.padding-top }}px {{ section.settings.padding-right }}px {{ section.settings.padding-bottom }}px {{ section.settings.padding-left }}px;
  
    }
  
  
  {% for item in section.blocks %}
      {% case item.type %}
  
        {% when "single-column-text-block" %}
          #single-column-text-wrapper-{{ item.id }}{
                margin: 0px {{ item.settings.single-column-text-margin }}px;
            }

        {% when "double-column-text-block" %}
                #double-column-text-wrapper-{{ item.id }}{
                      margin: 0px {{ item.settings.double-column-text-margin }}px;
                      display: flex;
                      gap: {{ item.settings.double-column-text-gap }}px;
                  }
          
        {% when "spacer-block" %}
                  #spacer-wrapper-{{ item.id }}{
                    height: {{ item.settings.spacer-height }}px;
                  }
  
      {% endcase %}
  {% endfor %}
  
  
  </style>
  
  
  
  <div class="text-and-spacer-section-wrapper">
  
  
    {% for item in section.blocks %}
  
      {% case item.type %}
  
        {% when "single-column-text-block" %}
  
          <section id="single-column-text-wrapper-{{ item.id }}" class="{{ item.settings.single-column-text-align }}">
            <p>
              {{ item.settings.single-column-richtext }}
            </p>
          </section>
  
          {% when "double-column-text-block" %}
  
            <section id="double-column-text-wrapper-{{ item.id }}">

                <div class="{{ item.settings.double-column-left-text-align }}">
                    <p>
                        {{ item.settings.double-column-richtext-left }}
                      </p>
                </div>
             <div class="{{ item.settings.double-column-right-text-align }}">
                <p>
                    {{ item.settings.double-column-richtext-right }}
                  </p>
             </div>
              
            </section>


        {% when "spacer-block" %}
          <section id="spacer-wrapper-{{ item.id }}">
  
          </section>
  
      {% endcase %}
  
    {% endfor %}
  
  
  </div>
  
  
  
  {% schema %}
    {
     "name":"wax-london-text-&-spacer",
     "settings":[
        {
           "type":"range",
           "id":"padding-top",
           "label":"padding top",
           "min":0,
           "max":200,
           "step":10,
           "unit":"px",
           "default":0
        },
        {
           "type":"range",
           "id":"padding-right",
