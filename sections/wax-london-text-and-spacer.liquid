           "settings":[
              {
                 "type":"richtext",
                 "id":"double-column-richtext-left",
                 "label":"Change Left Text Block",
                 "default":"<p>hello world from left</p>"
              },
              {
                 "type":"richtext",
                 "id":"double-column-richtext-right",
                 "label":"Change Right Text Block",
                 "default":"<p>hello world Right</p>"
              },
              {
                 "type":"select",
                 "id":"double-column-left-text-align",
                 "label":"Align Left Text Block",
                 "options":[
                    {
                       "value":"left",
                       "label":"Left"
                    },
                    {
                       "value":"center",
                       "label":"Center"
                    },
                    {
                       "value":"right",
                       "label":"Right"
                    }
                 ]
              },
              {
                 "type":"select",
                 "id":"double-column-right-text-align",
                 "label":"Align Right Text Block",
                 "options":[
                    {
                       "value":"left",
                       "label":"Left"
                    },
                    {
                       "value":"center",
                       "label":"Center"
                    },
                    {
                       "value":"right",
                       "label":"Right"
                    }
                 ]
              },
              {
           "type":"range",
           "id":"double-column-text-gap",
           "label":"Adjust Text Block Gap",
           "min":5,
           "max":20,
           "step":1,
           "unit":"px",
           "default":5
        },
              {
                 "type":"range",
                 "id":"double-column-text-margin",
                 "label":"text-margin",
                 "min":50,
                 "max":200,
                 "step":10,
                 "unit":"px",
                 "default":50
              }
           ]
        },
        {
           "name":"spacer-block",
           "type":"spacer-block",
           "settings":[
              {
                 "type":"range",
                 "id":"spacer-height",
                 "label":"spacer-height",
                 "min":50,
                 "max":200,
                 "step":10,
                 "unit":"px",
                 "default":50
              }
           ]
        }
     ],
     "presets":[
        {
           "category":"content",
           "name":"wax-london-text-&-spacer",
           "blocks":[
              {
                 "type":"single-column-text-block"
              }, 
              {
                "type": "spacer-block"
              }
           ]
        }
     ]
  }
  {% endschema %}